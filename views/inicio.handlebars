{{>mensagens}}

<style>
    form input{
        margin-bottom: 10px;
    }

    form{
        margin-top: 40px;
        text-align: center;
        margin-bottom: 80px;
    }

    .card{
        padding: 20px;
        text-align: center;
        margin-bottom: 20px;
    }

    .card p{
        text-align: center;
        margin-bottom: 5px;
    }

    .card img{
        width: 50%;
        height: 130px;
        margin: 0 auto;
        margin-bottom: 20px;
    }

    .alinharBtns{
        display: flex;
        justify-content: space-evenly;
        margin-top: 10px;
    }

    .alinharBtns a{
        width: 100px;
    }
</style>


{{!-- Principal --}}
<main>

    {{!-- Formul√°rio --}}
    <div class="container">
        <div class="row">
            <div class="col-6 offset-3">
                <form action="../cadastrar" method="post" enctype="multipart/form-data">
                    <input type="text" name="produto" class="form-control" placeholder="Produto">
                    <input type="text" name="valor" class="form-control" placeholder="Valor">
                    <input type="file" name="image" class="form-control">
                    <input type="submit" value="Cadastrar produto" class="btn btn-primary">
                </form>
            </div>
        </div>
    </div>

    {{!-- Listagem --}}
    {{#if falhaListarProdutos}}
        <p>Ops... Tivemos um problema para listar os produtos, tente novamente em alguns minutos.</p>
    {{/if}}

    <div class="container">
        <div class="row">
            {{#each produtos}}
                <div class="col-3">
                    <div class="card">
                        <img src="../imagens/{{imagem}}" alt="">
                        <p>{{produto}}</p>
                        <p>R${{valor}}</p>

                        <div class="alinharBtns">
                            <a href="/remover/{{codigo}}" class="btn btn-warning">Alterar</a>
                            <a href="/remover/{{codigo}}" class="btn btn-danger">Remover</a>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>

</main>